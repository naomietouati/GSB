<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/entete"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Menu Principal"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_btn_fraisauforfait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="8dp"
        android:text="Frais au forfait"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/main_btn_fraishorsforfait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="8dp"
        android:text="Frais Hors forfait"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/main_btn_consulterlesfrais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="8dp"
        android:text="Consulter les frais"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/main_btn_parametre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="8dp"
        android:text="Parametres"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_pagedéconnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="8dp"
        android:text="Déconnexion"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>
