<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motdepasseoublie"
    android:orientation="vertical">

   <include layout="@layout/entete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="Mot de passe oublié ?"
        android:textColor="@color/black"
        />
    <TextView
        android:labelFor="@id/main_edittext_emailMotdepasseoublie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Votre e-mail:"
        android:textColor="#F44336"
        />
    <EditText
        android:id="@+id/main_edittext_emailMotdepasseoublie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="example@gmail.com"
        />
    <Button
        android:id="@+id/main_btn_envoyerlecode"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="12dp"
        android:text="Envoyer le code"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <TextView
        android:labelFor="@id/main_edittext_coderecu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Rénitialisation du mot de passe:"
        android:textColor="#F44336"
        />
    <EditText
        android:id="@+id/main_edittext_coderecu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrez le code recu"
        />
    <EditText
        android:id="@+id/nouveauMotdepasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrez votre nouveau mot de passe"
        />
    <EditText
        android:id="@+id/main_edittext_confirmationMotdepassse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Confirmation du nouveau mot de passe"
        />
    <Button
        android:id="@+id/main_btn_valider"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="12dp"
        android:text="Valider"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>