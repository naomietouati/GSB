<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".historiquedesenvois"
    android:orientation="vertical">

  <include layout="@layout/entete"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:padding="8dp"
      android:textSize="28sp"
      android:textStyle="bold"
      android:text="Historique des envois"
      android:textColor="@color/black"
      />
  <TextView
      android:labelFor="@id/main_edittext_dateenvoie"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:text="Date de l'envoi:"
      android:textColor="#F44336"
      />
  <EditText
      android:id="@+id/main_edittext_dateenvoie"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:hint="JJ/MM/AAAA"
      />
  <TextView
      android:labelFor="@id/main_edittextsommetotale"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:text="Somme totale:"
      android:textColor="#F44336"
      />
  <EditText
      android:id="@+id/main_edittextsommetotale"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:hint="XXXXX €"
      />
  <TextView
      android:labelFor="@id/main_edittextaccusereception"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:text="Accusé de réception:"
      android:textColor="#F44336"
      />
  <EditText
      android:id="@+id/main_edittextaccusereception"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      />
  </LinearLayout>