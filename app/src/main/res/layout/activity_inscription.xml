<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inscription"
    android:orientation="vertical">

    <include layout="@layout/entete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="S'inscrire"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />
    <TextView
        android:labelFor="@id/main_edittext_emailInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="E-mail:"
        android:textColor="#F44336"
        />
    <EditText
        android:id="@+id/main_edittext_emailInscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="example@gmail.com"
        />
    <TextView
        android:labelFor="@id/main_edittext_motdepasseInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Mot de passe:"
        android:textColor="#F44336"
        />
    <EditText
        android:id="@+id/main_edittext_motdepasseInscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="XXXXXXXXXX"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/main_checkbox_conditionsUtilisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="J'accepte les conditions d'utilisation et la Politique de confidentialitÃ©."
            />
    </LinearLayout>
    <Button
        android:id="@+id/main_btn_continuerInscription"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:backgroundTint="#F35805"
        android:onClick="click_menu"
        android:paddingBottom="12dp"
        android:text="Continuer"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>
